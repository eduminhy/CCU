<script>
$('.slider slider-single').slick({
	  slidesToShow: 1,
	  slidesToScroll: 1,
	  arrows: false,
	  fade: true,
	  asNavFor: '.slider slider-nav'
	});
	$('.slider slider-nav').slick({
	  slidesToShow: 3,
	  slidesToScroll: 1,
	  asNavFor: '.slider slider-single',
	  dots: true,
	  centerMode: true,
	  focusOnSelect: true
	});
 </script>
