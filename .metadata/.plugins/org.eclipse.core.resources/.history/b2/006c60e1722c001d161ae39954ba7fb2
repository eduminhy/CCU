$('.responsive').slick({
  slidesToShow: 4,
  slidesToScroll: 4,
  responsive: [
    { breakpoint: 600, // 화면의 넓이가 600px 이상일 때
      settings: {
        slidesToShow: 3,
        slidesToScroll: 3
    }},
    { breakpoint: 320, // 화면의 넓이가 320px 이상일 때
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
  ]
});